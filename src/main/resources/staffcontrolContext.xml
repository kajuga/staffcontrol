<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context/
    http://www.springframework.org/schema/context/spring-context.xsd">

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		  destroy-method="close">
		<property name="driverClassName" value="org.postgresql.Driver"/>
		<property name="url" value="jdbc:postgresql://localhost:5432/staffcontrol"/>
		<property name="username" value="admin"/>
		<property name="password" value="123456"/>
	</bean>

	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource"/>
	</bean>

	<bean id="feedbackDAO"  class="staffcontrol.dao.spring.jdbc.FeedbackDaoSpringJdbcImpl" >
		<constructor-arg index="0" ref="jdbcTemplate"/>
	</bean>

	<bean id="teamDAO"  class="staffcontrol.dao.spring.jdbc.TeamDaoSpringJdbcImpl" >
		<constructor-arg index="0" ref="jdbcTemplate"/>
	</bean>

	<bean id="projectDAO"  class="staffcontrol.dao.spring.jdbc.ProjectDaoSpringJdbcImpl" >
		<constructor-arg index="0" ref="jdbcTemplate"/>
		<constructor-arg index="1" ref="teamDAO"/>
	</bean>

	<bean id="employeeDAO"  class="staffcontrol.dao.spring.jdbc.EmployeeDaoSpringJdbcImpl" >
		<constructor-arg index="0" ref="jdbcTemplate"/>
		<constructor-arg index="1" ref="projectDAO"/>
		<constructor-arg index="2" ref="feedbackDAO"/>
	</bean>

</beans>



